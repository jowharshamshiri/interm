{
  "name": "interm",
  "version": "0.1.0",
  "description": "MCP server for terminal applications and TUIs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "interm": "./bin/interm.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "node tests/run-tests.js",
    "test:unit": "node tests/run-tests.js --category unit",
    "test:integration": "node tests/run-tests.js --category integration",  
    "test:e2e": "node tests/run-tests.js --category e2e",
    "test:watch": "node --watch tests/run-tests.js",
    "test:verbose": "node tests/run-tests.js --verbose",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-pty": "^1.0.0",
    "sharp": "^0.33.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  },
  "keywords": [
    "mcp",
    "terminal",
    "tui",
    "cli",
    "automation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
